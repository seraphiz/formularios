<h1>Sales#new</h1>
<%= form_with model: @sale, local: true do |f| %>
<%= f.label :detail%>
<%= f.text_area :detail%>
<%= f.label :category%>
<%= f.text_field :category%>
<%= f.label :value %>
<%= f.number_field :value %>
<%= f.label :discount %>
<%= f.number_field :discount %>
<%= f.label :tax, 'Exento de IVA' %>
<%= f.check_box :tax %><br>
<%= f.submit 'Enviar' %>
<%end%>
